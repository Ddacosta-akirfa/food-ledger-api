generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

enum PaymentMethod {
  CASH
  MULTICAIXA
  TRANSFER
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  purchases Purchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String     @id @default(uuid())
  name      String     @unique
  purchases Purchase[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Purchase {
  id            String        @id @default(uuid())
  date          DateTime
  product       String
  quantity      Int
  unitPrice     Float
  total         Float
  paymentMethod PaymentMethod
  notes         String?

  userId     String
  categoryId String

  user     User     @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([categoryId])
  @@index([userId])
}
